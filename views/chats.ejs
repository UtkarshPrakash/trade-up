<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chats</title>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/js/chats.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: rgb(220, 215, 201);
            color: rgb(44, 57, 48);
        }
        .container {
            display: flex;
            height: 100vh;
        }
        .sidebar {
            width: 30%;
            background-color: rgb(63, 79, 68);
            padding: 15px;
            overflow-y: auto;
        }
        .chat-box {
            width: 70%;
            padding: 20px;
            background-color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .chat-item {
            padding: 10px;
            margin: 5px;
            background-color: rgb(162, 123, 92);
            color: white;
            cursor: pointer;
        }
        .chat-item:hover {
            background-color: rgb(220, 215, 201);
            color: black;
        }
        .messages {
            width: 100%;
            max-height: 400px;
            overflow-y: auto;
            padding: 10px;
            border: 1px solid rgb(44, 57, 48);
        }
        .input-box {
            display: flex;
            width: 100%;
            margin-top: 10px;
        }
        .input-box input {
            flex: 1;
            padding: 10px;
            border: 1px solid rgb(44, 57, 48);
        }
        .input-box button {
            padding: 10px;
            background-color: rgb(44, 57, 48);
            color: white;
            border: none;
            cursor: pointer;
        }
        .sent {
            background-color: rgb(240, 246, 179);
            text-align: right;
        }
        .received {
            background-color: rgb(176, 235, 179);
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Panel: List of Chats -->
        <div class="sidebar">
            <h2>Your Chats</h2>
            <div id="chatList">
                <% if (chats.length > 0) { %>
                    <% chats.forEach(chat => { %>
                        <div class="chat-item" onclick="window.location.href='/chats/<%= chat.id %>'">
                            Chat with <%= chat.seller_id === user_id ? chat.buyer_id : chat.seller_id %>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No chats available</p>
                <% } %>
            </div>
        </div>

        <!-- Main Panel: Chat Messages -->
        <div class="chat-box">
            <% if (chatDetails) { %>
                <h2 id="chatTitle">
                    Chat with <%= chatDetails.seller_id === user_id ? chatDetails.buyer_id : chatDetails.seller_id %>
                </h2>
                <div class="messages" id="messages">
                    <% messages.forEach(msg => { %>
                        <div class="<%= msg.sender_id === user_id ? 'sent' : 'received' %>">
                            <%= msg.message %>
                        </div>
                    <% }) %>
                </div>
                <div class="input-box">
                    <input type="text" id="messageInput" placeholder="Type a message..." />
                    <button onclick="sendMessage()">Send</button>
                </div>
            <% } else { %>
                <p>Select a chat to start messaging.</p>
            <% } %>
        </div>
    </div>

    <script> window.userId = <%= user_id %>; </script>
</body>
</html>
