<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chats</title>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/public/js/chats.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: rgb(220, 215, 201);
            color: rgb(44, 57, 48);
        }
        .container {
            display: flex;
            height: 100vh;
        }
        .sidebar {
            width: 30%;
            background-color: rgb(63, 79, 68);
            padding: 15px;
            overflow-y: auto;
        }
        .chat-box {
            width: 70%;
            padding: 20px;
            background-color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .chat-item {
            padding: 10px;
            margin: 5px;
            background-color: rgb(162, 123, 92);
            color: white;
            cursor: pointer;
        }
        .chat-item:hover {
            background-color: rgb(220, 215, 201);
            color: black;
        }
        .messages {
            width: 100%;
            max-height: 400px;
            overflow-y: auto;
            padding: 10px;
            border: 1px solid rgb(44, 57, 48);
        }
        .input-box {
            display: flex;
            width: 100%;
            margin-top: 10px;
        }
        .input-box input {
            flex: 1;
            padding: 10px;
            border: 1px solid rgb(44, 57, 48);
        }
        .input-box button {
            padding: 10px;
            background-color: rgb(44, 57, 48);
            color: white;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Panel: List of Chats -->
        <div class="sidebar">
            <h2>Your Chats</h2>
            <div id="chatList"></div>
        </div>

        <!-- Main Panel: Chat Messages -->
        <div class="chat-box">
            <h2 id="chatTitle">Select a chat to start messaging</h2>
            <div class="messages" id="messages"></div>
            <div class="input-box" id="inputBox" style="display: none;">
                <input type="text" id="messageInput" placeholder="Type a message..." />
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>
    </div>
    <script defer src="/public/js/chats.js"></script>
</body>
</html>
