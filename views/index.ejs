<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+IT+Moderna:wght@100..400&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <title>Trade Up</title>
    <link rel="stylesheet" href="/index_styles.css">
</head>
<body>
    <div class="navbar">
        <a id="profile" href="/auth/profile"> TradeUp</a>
        <a href="/auth/newpost">Add post</a>
        <a href="/chats/chatsPage">Chats</a>
        <form id="logout-form" style="display:inline;">
            <button type="submit">Logout</button>
        </form>
    </div>
    <div class="container">
        <h1>Welcome <%= buyer_name %></h1>
        <p>What are you looking for today?</p>
    </div>

    <!-- <form id="search">
        <input type="text" placeholder="Type name of an item">
    </form> -->

    <div class="item-container">
        <% if (Array.isArray(products) && products.length > 0) { %>
            <% products.forEach(item => { %>
                <div class="item">
                    <img src="<%= item.image_url %>" alt="<%= item.title %>" width="200">
                    <h3><%= item.title %></h3>
                    <p><%= item.desription %></p>
                    <p>Price: â‚¹<%= item.price %></p>
                    <button onclick="startChat('<%= buyer_id %>', '<%= item.user_id %>')">Start Chat</button>
                </div>
            <% }) %>
        <% } else { %>
            <p>No items available. </p>
        <% } %>
    </div>
    <script src="/js/auth.js"></script>
</body>
</html>
