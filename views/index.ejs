<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trade Up</title>
    <link rel="stylesheet" href="/index_styles.css">
</head>
<body>
    <div class="navbar">
        <a href="index.html">Home</a>
        <a href="chats.html">Chats</a>
        <a href="profile.html">Profile</a>
        <form id="logout-form" style="display:inline;">
            <button type="submit">Logout</button>
        </form>
    </div>
    <div class="container">
        <h1>Welcome to Trade Up!</h1>
        <p>Browse items, connect with sellers, and chat in real-time.</p>
    </div>

    <div class="item-container">
        <% if (Array.isArray(products) && products.length > 0) { %>
            <% products.forEach(item => { %>
                <div class="item">
                    <img src="<%= item.image_url %>" alt="<%= item.title %>" width="200">
                    <h3><%= item.title %></h3>
                    <p><%= item.desription %></p>
                    <p>Price: â‚¹<%= item.price %></p>
                    <button onclick="startChat('<%= buyer_id %>', '<%= item.user_id %>')">Start Chat</button>
                </div>
            <% }) %>
        <% } else { %>
            <p>No items available. </p>
        <% } %>
    </div>
    <script src="/js/auth.js"></script>
</body>
</html>
